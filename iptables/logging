sudo iptables -N LOGDROP
sudo iptables -A LOGDROP -m limit --limit 3/s --limit-burst 20 -j LOG --log-prefix "DROP: " --log-level 4
sudo iptables -A INPUT -j LOGDROP
sudo iptables -I LOGDROP 1 -d 255.255.255.255 -j DROP
sudo iptables -I LOGDROP 1 -d 224.0.0.0/4 -j DROP
sudo iptables -I LOGDROP 1 -s 192.168.16.3 -j DROP
sudo iptables -A LOGDROP -j DROP
